<div class="row" style="margin-bottom: 50px;">
    <div class="col-sm-6 col-sm-offset-3">
        <form data-role="recover" class="ajax-form" method="POST" action="/api/auth/recover">
            <h2 class="form-signin-heading">Recover password</h2>
            <div class="alert alert-success form-success" style="display: none;">
                Password recovery email has been sent to: <span class="email">example@example.com</span>
            </div>
            <div class="alert alert-danger form-error" style="display: none;"></div>
            <div class="form-group">
                <input name="email" type="email" class="form-control" placeholder="Email address" required autofocus="">
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Recover</button>
        </form>
        <a href="/login">Remembered password?</a>
    </div>
</div>