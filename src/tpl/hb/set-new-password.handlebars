<div class="row" style="margin-bottom: 50px;">
    <div class="col-sm-6 col-sm-offset-3">
        <form data-role="set-password" class="ajax-form" method="POST" action="/api/auth/setPassword">
            <h2 class="form-signin-heading">Set new password</h2>
            <div class="alert alert-danger form-error" style="display: none;"></div>
            <div class="form-group">
                <input name="password" type="password" class="form-control" placeholder="Password" required autofocus="">
            </div>
            <div class="form-group">
                <input name="password2" type="password" class="form-control" placeholder="Password repeat" required>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
        </form>
    </div>
</div>